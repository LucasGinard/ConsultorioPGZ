        android:theme="@style/Theme.ConsultorioPGZ"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.home.MainActivity"/>
        <activity android:name=".modules.about.AboutActivity"/>
        <activity android:name=".modules.client.view.ClientActivity"/>
        <activity android:name=".modules.schedule.view.ScheduleAppointmentActivity"/>
        <activity android:name=".modules.scheduleList.view.ScheduleListActivity"/>
    </application>

</manifest>